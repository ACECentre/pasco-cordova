<?xml version='1.0' encoding='utf-8'?>
<widget id="com.aminbros.audscancordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AUDScan</name>
    <description>
        Auditory Scanning, Intended to be cross-platform
    </description>
    <author email="hossein@aminbros.com" href="https://github.com/hosseinamin/">
        Hossein Amin
    </author>
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
    <preference name="DisableOverscroll" value="true" />
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="^4.4.0" />
    <plugin name="audscan-cordova-plugin" spec="git+https://github.com/hosseinamin/audscan-cordova-plugin.git" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
